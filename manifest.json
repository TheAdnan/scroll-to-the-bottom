{

  "manifest_version": 2,
  "name": "Scroll to the bottom",
  "version": "1.1",
  "description": "Automatic scroll to the bottom of any website",

  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Scroll to the bottom"
  },

  "background":
    {
      "scripts": ["background.js"]
  },

	"permissions": [
	   "webRequest",
     "activeTab"
	]

}
