{

  "manifest_version": 2,
  "name": "Scroll to the bottom",
  "version": "1.0",
  "description": "Automatic scroll to the bottom of any website",

  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png"
  },

  "background": {
	"scripts": ["background.js"]
	},

	"content_scripts": [
    {
      "matches": ["<all_urls>"],
       "js": ["/scroller.js"]

    }
	],

	"permissions": [
	   "webRequest",
     "activeTab"
	]

}
